        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.2",
        "@types/ms": "^0.7.34",
        "@types/node": "^22.0.0",
        "@types/passport-jwt": "^4.0.1",
        "@types/passport-local": "^1.0.38",
        "@types/supertest": "^6.0.0",
        "eslint": "^9.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0"
